            <a
              href="#"
              class="font-semibold leading-[135%] relative inline-block">
              <span class="relative z-10">Services</span>
            </a>
          </li>
          <!-- Add more list items here -->
        </ul>

        <div class="flex justify-end w-full">
          <button
            id="menuButton"
            class="text-gray-100 hover:text-white inline-flex items-center justify-center p-2 rounded-md focus:outline-none">
            <svg
              class="block h-8 w-8"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              id="openIcon">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
            <svg
              class="hidden h-8 w-8"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              id="closeIcon">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <div id="menuItems" class="hidden">
        <div
          class="bg-[#111C55] container mx-auto border-[#273270] rounded-md border overflow-hidden">
          <ul class="text-xl text-white">
            <li>Menu Item 1</li>
            <li>Menu Item 2</li>
            <!-- Add more menu items here -->
          </ul>
        </div>
      </div>
    </nav>

    <script>
      let isMenuOpen = false;

      const menuButton = document.getElementById('menuButton');
      const openIcon = document.getElementById('openIcon');
      const closeIcon = document.getElementById('closeIcon');
      const menuItems = document.getElementById('menuItems');

      menuButton.addEventListener('click', () => {
        isMenuOpen = !isMenuOpen;
        if (isMenuOpen) {
          openIcon.classList.add('hidden');
          closeIcon.classList.remove('hidden');
          menuItems.classList.remove('hidden');
        } else {
          openIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          menuItems.classList.add('hidden');
        }
      });
    </script>
